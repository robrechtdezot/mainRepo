<Window x:Class="WpfAppSven.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppSven"
        mc:Ignorable="d"
        Title="Greetings" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="279*"/>
            <ColumnDefinition Width="521*"/>
        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Left" Height="112" Margin="40,69,0,0" TextWrapping="Wrap" Text="Select a message option and then choose the Display button. " VerticalAlignment="Top" Width="162" Grid.Column="1"/>
        <RadioButton x:Name="HelloButton" Content="Hello" IsChecked="True" Margin="215,205,379,169" Grid.ColumnSpan="2" Background="#FFF5E8E8"/>
        <RadioButton x:Name="GoodbyeButton" Content="Goodbye" RenderTransformOrigin="1.757,0.49" Grid.Column="1" Margin="209,205,143,174" />
        <Button Content="Display" Margin="10,265,291,75" RenderTransformOrigin="5.291,3.152" Grid.Column="1" Click="Button_Click"/>
        
    </Grid>

</Window>
